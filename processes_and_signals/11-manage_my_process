#!/usr/bin/env bash

case "$1" in
  start)
    echo "Starting my_process..."
    ./4-to_infinity_and_beyond > /dev/null 2>&1 &
    echo $! > /var/run/my_process.pid
    ;;

  stop)
    echo "Stopping my_process..."
    if [ -f /var/run/my_process.pid ]; then
      kill "$(cat /var/run/my_process.pid)" 2>/dev/null
      rm -f /var/run/my_process.pid
    fi
    ;;

  restart)
    echo "Restarting my_process..."
    if [ -f /var/run/my_process.pid ]; then
      kill "$(cat /var/run/my_process.pid)" 2>/dev/null
      rm -f /var/run/my_process.pid
    fi
    ./4-to_infinity_and_beyond > /dev/null 2>&1 &
    echo $! > /var/run/my_process.pid
    ;;

  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac
